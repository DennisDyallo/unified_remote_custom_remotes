<?xml version="1.0" encoding="utf-8"?>
<layout>
	<row>
		<label id="message" text="Start!" ontap="fade" />
	</row>
	
	<row>
		<text text="0.5" hint="Wait (minutes)" onchange="w_update" />
	</row>
	<row>
		<text text="30" hint="Fade (minutes)" onchange="f_update" />
	</row>
	<row>
		<toggle id="lightsToggle" text="Turn lights off after wait?" checked="true" onchange="k_changed" />
	</row>
	<row>
		<toggle id="soundFromPc" text="Sound: PC" checked="true" ontap="soundFromPc_click" />
		<toggle id="soundFromTv" text="Sound: TV" ontap="soundFromTv_click" />
	</row>



</layout>